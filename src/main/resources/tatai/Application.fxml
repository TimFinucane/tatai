<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import de.jensd.fx.glyphs.materialdesignicons.MaterialDesignIconView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
   <left>
      <VBox fx:id="_sidePane" minHeight="-Infinity" minWidth="-Infinity" onMouseEntered="#openPane" onMouseExited="#closePane" BorderPane.alignment="CENTER">
         <children>
            <Pane minHeight="-Infinity" minWidth="-Infinity" prefHeight="55.0" prefWidth="55.0" style="-fx-background-color: #22A7F0;" />
            <JFXButton fx:id="homeBtn" alignment="BASELINE_LEFT" contentDisplay="GRAPHIC_ONLY" graphicTextGap="15.0" prefHeight="55.0" ripplerFill="#22a7f0" text="Home" textFill="WHITE">
               <font>
                  <Font size="20.0" />
               </font>
               <graphic>
                  <MaterialDesignIconView fx:id="_iconHome" fill="WHITE" glyphName="HOME" size="26" />
               </graphic>
            </JFXButton>
            <JFXButton fx:id="practiceBtn" alignment="BASELINE_LEFT" contentDisplay="GRAPHIC_ONLY" graphicTextGap="15.0" prefHeight="55.0" ripplerFill="#22a7f0" text="Practice" textFill="WHITE">
               <graphic>
                  <FontAwesomeIconView fill="WHITE" glyphName="SORT_NUMERIC_ASC" size="28" text="" />
               </graphic>
               <font>
                  <Font size="20.0" />
               </font>
            </JFXButton>
            <JFXButton fx:id="testBtn" alignment="BASELINE_LEFT" contentDisplay="GRAPHIC_ONLY" graphicTextGap="15.0" prefHeight="55.0" ripplerFill="#22a7f0" text="Test" textFill="WHITE">
               <graphic>
                  <FontAwesomeIconView fill="WHITE" glyphName="CALCULATOR" size="26" text="" />
               </graphic>
               <font>
                  <Font size="20.0" />
               </font>
            </JFXButton>
            <JFXButton fx:id="statsBtn" alignment="BASELINE_LEFT" contentDisplay="GRAPHIC_ONLY" graphicTextGap="15.0" prefHeight="55.0" ripplerFill="#22a7f0" text="Statistics" textFill="WHITE">
               <graphic>
                  <FontAwesomeIconView fill="WHITE" glyphName="LIST_OL" size="26" text="" />
               </graphic>
               <font>
                  <Font size="20.0" />
               </font>
            </JFXButton>
            <Region prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
            <JFXButton fx:id="infoBtn" contentDisplay="GRAPHIC_ONLY">
               <graphic>
                  <MaterialDesignIconView fill="WHITE" glyphName="BRIGHTNESS_4" size="26" text="" />
               </graphic>
            </JFXButton>
         </children>
      </VBox>
   </left>
   <center>
      <HBox fx:id="topPane" alignment="CENTER" prefWidth="600.0" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
