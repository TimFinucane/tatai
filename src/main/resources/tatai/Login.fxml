<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root type="VBox" alignment="CENTER" spacing="50.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label fx:id="loginLbl" minHeight="-Infinity" minWidth="-Infinity" text="Sign in">
            <font>
                <Font size="22.0" />
            </font>
        </Label>
        <HBox alignment="CENTER" spacing="15.0">
         <children>
             <JFXTextField fx:id="usernameFld" focusColor="#22a7f0" labelFloat="true" minHeight="-Infinity" minWidth="-Infinity" promptText="Username" unFocusColor="WHITE">
                 <font>
                     <Font size="20.0" />
                 </font>
             </JFXTextField>
             <FontAwesomeIconView fx:id="indicatorIcon" glyphName="CIRCLE" size="12"/>
         </children>
      </HBox>
        <JFXButton fx:id="signInBtn" buttonType="RAISED" ripplerFill="#22a7f0" text="Next">
            <font>
                <Font size="20.0" />
            </font>
        </JFXButton>
    </children>
</fx:root>
