<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="30.0" style="-fx-background-color: #2c2C31;" type="VBox" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label alignment="CENTER" style="-fx-background-color: #29292D;" text="Select a level of difficulty" textFill="#fffdfd">
         <font>
            <Font size="36.0" />
         </font>
      </Label>
      <FlowPane fx:id="_paneFlow" alignment="CENTER" columnHalignment="CENTER" hgap="30.0" vgap="30.0">
         <children>
            <JFXButton fx:id="_btnEasy" alignment="CENTER" contentDisplay="TEXT_ONLY" prefWidth="150.0" text="Easy" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font size="20.0" />
               </font>
            </JFXButton>
            <JFXButton fx:id="_btnIntermediate" alignment="CENTER" contentDisplay="TEXT_ONLY" prefWidth="150.0" text="Intermediate" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font size="20.0" />
               </font>
            </JFXButton>
            <JFXButton fx:id="_btnAdvanced" alignment="CENTER" contentDisplay="TEXT_ONLY" prefWidth="150.0" text="Advanced" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font size="20.0" />
               </font>
            </JFXButton>
            <JFXButton fx:id="_btnCustom" alignment="CENTER" contentDisplay="TEXT_ONLY" prefWidth="150.0" text="Custom" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font size="20.0" />
               </font>
            </JFXButton>
         </children>
      </FlowPane>
      <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
         <children>
            <VBox alignment="CENTER_RIGHT" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <JFXButton fx:id="_btnCreateCustom" alignment="CENTER" contentDisplay="TEXT_ONLY" prefHeight="30.0" prefWidth="100.0" text="+Custom" textAlignment="CENTER" textFill="WHITE" />
                  <JFXButton fx:id="_btnRemoveCustom" alignment="CENTER" contentDisplay="TEXT_ONLY" prefHeight="30.0" prefWidth="100.0" text="-Custom" textAlignment="CENTER" textFill="WHITE" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
   </padding>
</fx:root>
