<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root alignment="CENTER" style="-fx-background-color: #29292D;" type="VBox" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" text="Select a level of difficulty" textFill="#fffdfd">
         <font>
            <Font size="36.0" />
         </font>
      </Label>
      <FlowPane fx:id="_paneFlow" alignment="CENTER" columnHalignment="CENTER" hgap="30.0" prefHeight="118.0" prefWidth="560.0" vgap="30.0">
         <children>
            <JFXButton fx:id="_btnEasy" alignment="CENTER" contentDisplay="TEXT_ONLY" prefWidth="150.0" ripplerFill="#dddddd" text="Easy" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font size="20.0" />
               </font>
            </JFXButton>
            <JFXButton fx:id="_btnIntermediate" alignment="CENTER" contentDisplay="TEXT_ONLY" prefWidth="150.0" ripplerFill="#dddddd" text="Intermediate" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font size="20.0" />
               </font>
            </JFXButton>
            <JFXButton fx:id="_btnAdvanced" alignment="CENTER" contentDisplay="TEXT_ONLY" prefWidth="150.0" ripplerFill="#dddddd" text="Advanced" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font size="20.0" />
               </font>
            </JFXButton>
            <JFXButton fx:id="_btnCustom" alignment="CENTER" contentDisplay="TEXT_ONLY" prefWidth="150.0" ripplerFill="#dddddd" text="Custom" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font size="20.0" />
               </font>
            </JFXButton>
         </children>
      </FlowPane>
      <VBox alignment="CENTER_RIGHT">
         <children>
            <JFXButton fx:id="_btnCreateCustom" alignment="CENTER" contentDisplay="GRAPHIC_ONLY" prefHeight="55.0" prefWidth="55.0" ripplerFill="#dddddd" textAlignment="CENTER" textFill="WHITE">
               <graphic>
                  <FontAwesomeIconView fill="WHITE" glyphName="PLUS" size="26" />
               </graphic>
            </JFXButton>
            <JFXButton fx:id="_btnRemoveCustom" alignment="CENTER" contentDisplay="GRAPHIC_ONLY" prefHeight="55.0" prefWidth="55.0" ripplerFill="#dddddd" text="-Custom" textAlignment="CENTER" textFill="WHITE">
               <graphic>
                  <FontAwesomeIconView fill="WHITE" glyphName="MINUS" size="26" />
               </graphic>
            </JFXButton>
         </children>
      </VBox>
   </children>
</fx:root>
