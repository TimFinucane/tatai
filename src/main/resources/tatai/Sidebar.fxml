<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import de.jensd.fx.glyphs.materialdesignicons.MaterialDesignIconView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root onMouseEntered="#openPane" onMouseExited="#closePane" prefWidth="55.0" stylesheets="@stylesheets/Sidebar.css" type="VBox" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Pane minHeight="-Infinity" minWidth="-Infinity" prefHeight="55.0" prefWidth="55.0" style="-fx-background-color: #22A7F0;" />
        <JFXButton fx:id="homeBtn" contentDisplay="GRAPHIC_ONLY" graphicTextGap="15.0" maxWidth="1.7976931348623157E308" prefHeight="55.0" text="Home">
            <font>
                <Font size="20.0" />
            </font>
            <graphic>
                <MaterialDesignIconView fx:id="_iconHome" fill="WHITE" glyphName="HOME" size="26" />
            </graphic>
        </JFXButton>
        <JFXButton fx:id="practiceBtn" contentDisplay="GRAPHIC_ONLY" graphicTextGap="15.0" maxWidth="1.7976931348623157E308" prefHeight="55.0" text="Practice">
            <graphic>
                <FontAwesomeIconView fill="WHITE" glyphName="SORT_NUMERIC_ASC" size="28" text="" />
            </graphic>
            <font>
                <Font size="20.0" />
            </font>
        </JFXButton>
        <JFXButton fx:id="testBtn" contentDisplay="GRAPHIC_ONLY" graphicTextGap="15.0" maxWidth="1.7976931348623157E308" prefHeight="55.0" text="Test">
            <graphic>
                <FontAwesomeIconView fill="WHITE" glyphName="CALCULATOR" size="26" text="" />
            </graphic>
            <font>
                <Font size="20.0" />
            </font>
        </JFXButton>
        <JFXButton fx:id="statsBtn" contentDisplay="GRAPHIC_ONLY" graphicTextGap="15.0" maxWidth="1.7976931348623157E308" prefHeight="55.0" text="Statistics">
            <graphic>
                <FontAwesomeIconView fill="WHITE" glyphName="LIST_OL" size="26" text="" />
            </graphic>
            <font>
                <Font size="20.0" />
            </font>
        </JFXButton>
        <Region maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="0.0" minWidth="0.0" prefHeight="0.0" prefWidth="0.0" VBox.vgrow="SOMETIMES" />
        <JFXButton fx:id="infoBtn" contentDisplay="GRAPHIC_ONLY" maxWidth="1.7976931348623157E308">
            <graphic>
                <MaterialDesignIconView fill="WHITE" glyphName="BRIGHTNESS_4" size="26" text="" />
            </graphic>
        </JFXButton>
    </children>
</fx:root>
