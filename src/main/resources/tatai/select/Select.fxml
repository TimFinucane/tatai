<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root alignment="CENTER" maxHeight="Infinity" maxWidth="Infinity" type="VBox" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label fx:id="titleLbl" alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" text="Select a level of difficulty">
         <font>
            <Font size="36.0" />
         </font>
      </Label>
      <Region VBox.vgrow="SOMETIMES" />
      <FlowPane fx:id="flowPane" alignment="CENTER" columnHalignment="CENTER" hgap="30.0" vgap="30.0">
         <children>
            <JFXButton fx:id="_btnEasy" alignment="CENTER" contentDisplay="TEXT_ONLY" prefWidth="150.0" text="Easy" textAlignment="CENTER">
               <font>
                  <Font size="20.0" />
               </font>
            </JFXButton>
            <JFXButton fx:id="_btnIntermediate" alignment="CENTER" contentDisplay="TEXT_ONLY" prefWidth="150.0" text="Intermediate" textAlignment="CENTER">
               <font>
                  <Font size="20.0" />
               </font>
            </JFXButton>
            <JFXButton fx:id="_btnAdvanced" alignment="CENTER" contentDisplay="TEXT_ONLY" prefWidth="150.0" text="Advanced" textAlignment="CENTER">
               <font>
                  <Font size="20.0" />
               </font>
            </JFXButton>
            <JFXButton fx:id="_btnCustom" alignment="CENTER" contentDisplay="TEXT_ONLY" prefWidth="150.0" text="Custom" textAlignment="CENTER">
               <font>
                  <Font size="20.0" />
               </font>
            </JFXButton>
         </children>
      </FlowPane>
      <Region VBox.vgrow="SOMETIMES" />
   </children>
   <padding>
      <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
   </padding>
</fx:root>
